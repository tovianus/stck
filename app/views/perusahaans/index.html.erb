<% provide(:title, 'Daftar perusahaan') %>
<div class="row-fluid">
  <div class="page-header span12">
    <%= render "layouts/page_title" %>
  </div>
  <div class="row-fluid span12">
    <tr>
      <th>Nama penanggung jawab</th>
      <th>Nama badan</th>
      <th>Alamat badan</th>
      <th>Telepon</th>
      <th>Nama kontak</th>
      <th>Kode perusahaan</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @perusahaans.each do |perusahaan| %>
    <tr>
      <td><%= perusahaan.nama_penanggung %></td>
      <td><%= perusahaan.nama_badan %></td>
      <td><%= perusahaan.alamat_badan %></td>
      <td><%= perusahaan.telepon %></td>
      <td><%= perusahaan.nama_kontak %></td>
      <td><%= perusahaan.kdperusahaan %></td>
      <td><%= link_to 'Show', perusahaan %></td>
      <td><%= link_to 'Edit', edit_perusahaan_path(perusahaan) %></td>
      <td><%= link_to 'Destroy', perusahaan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to('New Perusahaan', new_perusahaan_path, :class => "btn btn-large btn-primary" )  %>  

  </div>
</div>

