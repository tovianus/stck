<div class="span12">
  <div align:center class="span5 offset4">
  <%= form_for(@user, :url => { :action => "update_password" } ) do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
    <div class="field">
      <%= f.label "Password lama anda:" %>
      <%= f.password_field :current_password %>
    </div>
    <div class="field">
      <%= f.label :password, "Password baru" %>
      <%= f.password_field :password, :autocomplete => "off"  %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Konfirmasi Password baru" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="action_container">
      <%= f.submit %>
    </div>
  <% end %>
  </div>
</div>
