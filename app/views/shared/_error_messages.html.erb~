<div class="alert alert-block">
<% if @user.errors.any? %>
  <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>The form contains <%= pluralize(@user.errors.count, "error") %>.</h4>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
</div>
