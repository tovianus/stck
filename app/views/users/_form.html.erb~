<div class="span12">
  <div class="span8 offset2">
    <%= form_for @user, :html => { :class=>"form-horizontal" }  do |f| %>
<!--- Admin only --->
      <% if current_user.is?"admin" || current_user!=@user.id %>
        <div class="control-group">
          <%= f.label "Perusahaan", :class=>"control-label" %>
          <div class="controls">
            <%= collection_select(:user, :perusahaan_id, Perusahaan.all, :id, :nama_badan) %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :email, :class=>"control-label" %>
          <div class="controls">
            <% if current_user.is?"admin" %>
              <%= f.email_field :email %>
            <% else %>
              <%= f.email_field :email, :class => "disable" %>
            <% end %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label "Role", :class=>"control-label" %>
          <div class="controls">
            <% for role in User::ROLES %>
              <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
              <%= label_tag "user_roles_#{role}", role.humanize, :class=>"checkbox inline" %>
            <% end %>
          </div>
        </div>
      <% end %>
<!--- end of admin only --->
      <div class="control-group">
        <%= f.label :password, "Password", :class=>"control-label" %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, :class=>"control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>


      <div class="form-actions">
        <%= f.submit %>
        <%= link_to 'Kembali', users_path,:class => "btn btn-small" %>    
      </div>
    <% end %>
  </div>
</div>
