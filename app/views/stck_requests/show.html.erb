    <%= link_to 'Edit', edit_stck_request_path(@stck_request),:class=>"btn" %> 
  <% end %>
  <% if @stck_request.tg_persetujuan==nil %>
    <% if @stck_request.stck_status=="DIBATALKAN"%>
      <%= link_to 'Aktifkan', @stck_request, method: :delete, data: { confirm: 'Aktifkan ?' },:class => "btn" %> 
    <% elsif  @stck_request.stck_status=="DIMOHON" %>
