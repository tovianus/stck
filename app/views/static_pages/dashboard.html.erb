<% provide(:title, 'Dashboard') %>
<div class="row-fluid  span12"  >
  <div class="row-fluid">
    <div class="span2">
      <h3>Hari ini</h3>
      <ul class="unstyled">
        <li><span class="label label-warning">Pending  <%= @pending_today %></span></li>
        <li><span class="label label-important">Dibatalkan <%= @cancelled_today %></span></li>
        <li><span class="label label-info">Disetujui <%= @approved_today %></span></li>
        <li><span class="label label-success">Didaftarkan <%= @registered_today %></span></li>
        <li><span class="label label-success">Dicetak <%= @printed_today %></span></li>
      </ul>
      <h3>Bulan ini</h3>
      <ul class="unstyled">
        <li><span class="label label-warning">Pending <%= @pending_mtd %></span></li>
        <li><span class="label label-important">Dibatalkan <%= @cancelled_mtd %></span></li>
        <li><span class="label label-info">Disetujui <%= @approved_mtd %></span></li>
        <li><span class="label label-success">Didaftarkan <%= @registered_mtd %></span></li>
        <li><span class="label label-success">Dicetak <%= @printed_mtd %></span></li>
      </ul>
      <h3>Tahun ini</h3>
      <ul class="unstyled">
        <li><span class="label label-warning">Pending <%= @pending_ytd %></span></li>
        <li><span class="label label-important">Dibatalkan <%= @cancelled_ytd %></span></li>
        <li><span class="label label-info">Disetujui <%= @approved_ytd %></span></li>
        <li><span class="label label-success">Didaftarkan <%= @registered_ytd %></span></li>
        <li><span class="label label-success">Dicetak <%= @printed_ytd %></span></li>
      </ul>
    </div>
    <div class="span10">
      <span class="label label-warning"><h3>Pending</h3></span>
      <table class="table table-condensed">
        <thead>
          <th>tanggal</th>
          <th>no rangka</th>
          <th>no mesin</th>
        </thead>
        <% @pending.each do |t| %>
          <tr>
            <td><%= t.tg_mohon %></td>
            <td><%= t.no_rangka %></td>
            <td><%= t.no_mesin %></td>
          </tr>
        <% end %>
      </table>
      <span class="label label-important"><h3>Dibatalkan</h3></span>
      <table class="table table-condensed">
        <thead>
          <th>tanggal</th>
          <th>no rangka</th>
          <th>no mesin</th>
        </thead>
        <% @cancelled.each do |t| %>
          <tr>
            <td><%= t.tg_pembatalan %></td>
            <td><%= t.no_rangka %></td>
            <td><%= t.no_mesin %></td>
          </tr>
        <% end %>
      </table>
      <span class="label label-info"><h3>Disetujui</h3></span>
      <table class="table table-condensed">
        <thead>
          <th>tanggal</th>
          <th>no rangka</th>
          <th>no mesin</th>
        </thead>
        <% @approved.each do |t| %>
          <tr>
            <td><%= t.tg_persetujuan %></td>
            <td><%= t.no_rangka %></td>
            <td><%= t.no_mesin %></td>
          </tr>
        <% end %>
      </table>
      <span class="label label-success"><h3>Didaftarkan</h3></span>
      <table class="table table-condensed">
        <thead>
          <th>tanggal</th>
          <th>no rangka</th>
          <th>no mesin</th>
        </thead>
        <% @registered.each do |t| %>
          <tr>
            <td><%= t.tg_daftar %></td>
            <td><%= t.no_rangka %></td>
            <td><%= t.no_mesin %></td>
          </tr>
        <% end %>
      </table>
      <span class="label label-success"><h3>Dicetak</h3></span>
      <table class="table table-condensed">
        <thead>
          <th>tanggal</th>
          <th>no rangka</th>
          <th>no mesin</th>
        </thead>
        <% @printed.each do |t| %>
          <tr>
            <td><%= t.tg_cetak %></td>
            <td><%= t.no_rangka %></td>
            <td><%= t.no_mesin %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


